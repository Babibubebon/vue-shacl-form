{
  "name": "vue-shacl-form",
  "version": "0.2.2",
  "description": "A Vue.js component for HTML5 form generation based on SHACL",
  "main": "dist/VueShaclForm.umd.js",
  "author": "Babibubebon",
  "license": "MIT",
  "scripts": {
    "serve": "vue-cli-service serve --mode bundle",
    "build": "vue-cli-service build --target lib --formats umd,umd-min --name VueShaclForm src/ShaclForm.vue",
    "build:demo": "vue-cli-service build src/main.js --dest demo --mode bundle",
    "lint": "vue-cli-service lint"
  },
  "dependencies": {
    "merge": "^1.2.1",
    "rdflib": "github:Babibubebon/rdflib.js#fix",
    "shacl": "github:Babibubebon/shacl-js#develop"
  },
  "devDependencies": {
    "@babel/runtime-corejs2": "^7.1.5",
    "@vue/cli-plugin-babel": "^3.2.0",
    "@vue/cli-plugin-eslint": "^3.2.1",
    "@vue/cli-service": "^3.2.0",
    "axios": "^0.18.0",
    "babel-eslint": "^10.0.1",
    "bootstrap": "^4.1.3",
    "eslint": "^5.10.0",
    "eslint-plugin-vue": "^5.0.0-beta.5",
    "jquery": "^3.3.1",
    "vue": "^2.5.20",
    "vue-template-compiler": "^2.5.20"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ],
    "rules": {
      "vue/require-v-for-key": "off"
    },
    "parserOptions": {
      "parser": "babel-eslint"
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  }
}
